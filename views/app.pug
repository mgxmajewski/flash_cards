extends layout

block content
    section.namecard
        .namecard-hello
            if name
                p.namecard-greeting Welcome, #{name}!
                form.namecard-exit(action='/goodbye', method='POST')
                    button(type='submit')
                        img(src='/img/close.svg')
            else
                p.namecard-greeting Hello, student!
            block intro
        block card
